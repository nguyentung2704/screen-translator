<Window x:Class="ScreenTranslator.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="#CC1E1E1E"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen"
        BorderBrush="#FF555555" BorderThickness="1">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleBlock" Text="Application Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel x:Name="ApiSection" Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Gemini API Key:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ApiKeyBox" Height="30" Padding="5,2" 
                          Background="#FF333333" Foreground="White" BorderBrush="#FF555555"/>
            <TextBlock Text="Get it from Google AI Studio" FontSize="11" Foreground="#FFAAAAAA" Cursor="Hand" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel x:Name="HotkeySection" Grid.Row="2">
            <TextBlock Text="Capture Hotkey:" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox x:Name="CtrlCheck" Content="Ctrl" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <CheckBox x:Name="ShiftCheck" Content="Shift" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <CheckBox x:Name="AltCheck" Content="Alt" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="KeyCombo" Width="100" Height="25" 
                          DisplayMemberPath="Display" SelectedValuePath="Value"
                          Background="#FF333333" Foreground="White" BorderBrush="#FF555555"
                          VerticalContentAlignment="Center">
                    <ComboBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF333333" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="White" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF333333" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White" />
                    </ComboBox.Resources>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF333333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Width="80" Height="30" Margin="0,0,10,0" 
                    Background="#FF007ACC" Foreground="White" BorderThickness="0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                    Background="#FF444444" Foreground="White" BorderThickness="0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
