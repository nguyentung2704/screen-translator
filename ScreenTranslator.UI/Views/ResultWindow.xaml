<Window x:Class="ScreenTranslator.UI.Views.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translation" Height="200" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="#CC333333"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False"
        MouseDown="Window_MouseDown">
    <Border BorderBrush="#FF555555" BorderThickness="1" CornerRadius="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Translation" Foreground="#FFAAAAAA" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Grid.Row="1" Text="{Binding TranslatedText}" 
                     Background="Transparent" Foreground="White" BorderThickness="0"
                     TextWrapping="Wrap" IsReadOnly="True" FontSize="14"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                <Button Content="Close" Padding="10,2" Margin="5,0,0,0" Background="#FF444444" Foreground="White" BorderThickness="0" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
