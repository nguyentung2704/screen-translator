<Window x:Class="ScreenTranslator.UI.Views.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SelectionWindow" Height="450" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="#50000000"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        WindowState="Maximized"
        MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseUp="Window_MouseUp"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="SelectionCanvas">
        <Rectangle x:Name="SelectionRect" Stroke="Red" StrokeThickness="2" Fill="#20FFFFFF" Visibility="Collapsed"/>
    </Canvas>
</Window>
